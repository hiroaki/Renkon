<header class="contaner mb-4">
  <h3><%= article.title %></h3>
  <div class="contaner text-xs">
    <%= link_to(article.url, article.url, target: '_blank', rel: 'noopener noreferrer') %>
  </div>
</header>
<hr>
<div class="contaner">
  <%=
    sanitize(article.description || '',
      tags: ['img', 'p', 'br', 'div', 'pre', 'code', 'h1', 'h2', 'h3'],
      attributes: ['src'],
    )
    .gsub(/\n|\r|\r\n/, '<br>')
    .html_safe
  %>
</div>
