<% if params[:short] == 'true' %>
  <div class="relative w-full">
    <div class="flex justify-between">
      <span class="left text-nowrap overflow-hidden">
        <% if channel.favicon.attached? %>
          <%= image_tag channel.favicon, width: 16, height: 16, class: 'inline' %>
          <%= channel.title %>
        <% else %>
          <!-- https://icons.getbootstrap.jp/icons/rss/ -->
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="inline" viewBox="0 0 16 16">
            <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z"/>
            <path d="M5.5 12a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0m-3-8.5a1 1 0 0 1 1-1c5.523 0 10 4.477 10 10a1 1 0 1 1-2 0 8 8 0 0 0-8-8 1 1 0 0 1-1-1m0 4a1 1 0 0 1 1-1 6 6 0 0 1 6 6 1 1 0 1 1-2 0 4 4 0 0 0-4-4 1 1 0 0 1-1-1"/>
          </svg>
          <%= channel.title %>
        <% end %>
      </span>
      <span class="right ml-2 px-2 py-1 font-semibold leading-none text-green-700 bg-green-100 rounded-full dark:bg-green-700 dark:text-green-100">
        <%= channel.count_items(unread: true) %>
      </span>
    </div>
  </div>
<% else %>
  <div class="container">
    <p>
      <strong>Title:</strong>
      <%= channel.title %>
    </p>
    <p>
      <strong>Src:</strong>
      <%= channel.src %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= channel.description %>
    </p>

    <p>
      <strong>Last build date:</strong>
      <%= channel.last_build_date %>
    </p>

    <p>
      <strong>Unread:</strong>
      <%= channel.respond_to?(:count_items) ? channel.count_items : channel.items.count %>
      <span style="color: green"><%= notice %></span>
    </p>

    <p>
      <strong>URL:</strong>
      <%= channel.url %>
    </p>
  </div>
<% end %>
